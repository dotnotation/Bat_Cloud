<%= form_with model: @researcher do |f| %>
        
    <b><%= f.label :name %></b>
    <%= f.text_field :name %><br>

    
    <b><%= f.label :email %></b>
    <%= f.text_field :email %><br>

    
    <b><%= f.label :password %></b>
    <%= f.password_field :password %><br>


    <b><%= f.label :address %></b>
    <%= f.text_field :address %>

    
    <b><%= f.label :phone_number %></b>
    <%= f.text_field :phone_number %>

    
    <b><%= f.label :organization_name %></b>
    <%= f.collection_select :organization_name, Researcher.organizations, :organization_name, :organization_name, {include_blank:true} %>

    <% if logged_in? && admin? %>
        <b><%= f.label :access, "Researcher Type" %></b>
        <%= f.select :access, [["Admin","admin"],["Member","member"]],{prompt: @researcher.access.titleize} %>
    <% end %>
        
    <%= f.submit submit_text, class: "btn btn-info" %>
<% end %>

