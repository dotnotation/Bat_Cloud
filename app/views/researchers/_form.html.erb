<%= render partial: 'errors/errors', locals: {model: @researcher} %>

<%= form_with model: @researcher do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
    <%= f.label :organization_name %>
    <%= f.collection_select :organization_name, Researcher.all, :id, :organization_name, {include_blank:true} %>

    <% if logged_in? && admin? %>
        <%= f.label :organization_id, "Organization ID" %>
        <%= f.collection_select :organization_id, Researcher.all, :id, :organization_id, {include_blank:true} %>
        <%= f.label :access, "Researcher Type" %>
        <%= f.select :access, [["Admin","admin"],["Member","member"]],{prompt: @researcher.access.titleize} %>
    <% end %>
    <%= f.submit %>
<% end %>