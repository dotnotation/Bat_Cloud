<%= form_with model: @bat do |f| %>
    <b><%= f.label :tag_number %></b>
    <%= f.text_field :tag_number %><br>
    <b><%= f.label :nickname %></b>
    <%= f.text_field :nickname %><br>
    <b><%= f.label :species %></b>
    <%= f.text_field :species %><br>
    <b><%= f.label :date_found %></b>
    <%= f.text_field :date_found %><br>
    <b><%= f.label :location %></b>
    <%= f.text_field :location %><br>
    <b><%= f.label :date_last_seen %></b>
    <%= f.text_field :date_last_seen %><br>
    <b><%= f.label :weight, "Weight in Grams" %></b>
    <%= f.text_field :weight %><br>
    <b><%= f.label :age, "Age in Years" %></b>
    <%= f.text_field :age %><br>
    <b><%= f.label :sex %></b>
    <%= f.select :sex, ["F", "M", "Unknown"] %><br>
    <b><%= f.label :wing_span, "Wing Span in CM" %></b>
    <%= f.text_field :wing_span %><br>
    <b><%= f.label :colony_size %></b>
    <%= f.text_field :colony_size %><br>
    <b><%= f.label :conservation_status %></b>
    <%= f.select :conservation_status, 
        ["Not Evaluated", "Data Deficient", "Least Concern", "Conservation Dependent", "Near Threatened", 
        "Vulnerable", "Endangered", "Critically Endangered", "Extinict in the Wild", "Extinct"] %><br>
    <b>Presence of White Nose Syndrome:</b>
    <%= f.label :white_nose_syndrome, 'True' %>
    <%= f.radio_button :white_nose_syndrome, 'true' %>
    <%= f.label :white_nose_syndrome, 'False' %>
    <%= f.radio_button :white_nose_syndrome, 'false' %><br>
    <%= f.hidden_field :discoverer_id, value: current_researcher.id %><br>
    
    <%= f.submit submit_text, class: "btn btn-info" %>
<% end %>